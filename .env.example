# PostgreSQL Configuration
USE_POSTGRES=True
POSTGRES_DB=restaurant_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Alternative: Single Database URL
# DATABASE_URL=postgres://postgres:your_password@localhost:5432/restaurant_db

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOW_INSECURE_SECRET_KEY=true

# Set to your domain in production
ALLOWED_HOSTS=localhost,127.0.0.1 
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Optional: use SQLite even when DEBUG=False (e.g. CI/local testing without Postgres)
USE_SQLITE_FALLBACK=False
